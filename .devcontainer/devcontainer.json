{
	"name": "LocalBox",
	"build": {
		"context": ".",
		"dockerfile": "Dockerfile.dev"
	},
	"features": {
		"ghcr.io/devcontainers/features/nix:1": {
			"extraNixConfig": "experimental-features = nix-command flakes"
		}
	},
	"runArgs": [
		"--privileged",
		"--cgroupns=host"
	],
	"customizations": {
		"vscode": {
			"extensions": [
				"golang.go",
				"jnoortheen.nix-ide"
			]
		}
	},
	"portsAttributes": {
		"2000": {
			"label": "LocalBox API",
			"onAutoForward": "notify"
		}
	}
}